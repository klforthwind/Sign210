from pi5neo import Pi5Neo
import time

def rainbow_cycle(neo, delay=0.1):
    colors = [
                    (255, 0, 0),  # Red
                    (255, 127, 0),  # Orange
                    (255, 255, 0),  # Yellow
                    (0, 255, 0),  # Green
                    (0, 0, 255),  # Blue
                    (75, 0, 130),  # Indigo
                    (148, 0, 211)  # Violet
    ]
    while (true):
        for color in colors:
            neo.fill_strip(*color)
            neo.update_strip()
            time.sleep(delay)

neo = Pi5Neo('/dev/spidev0.0', 188, 800)
rainbow_cycle(neo,1)
